<!DOCTYPE html>
<html lang="en" data-theme="retro">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Herbal Cure</title>
  </head>
  <body>
    <% include ./partial/navbar %>
    <div class="min-h-screen">
      <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-8 mt-3">
        <!-- Image and Names -->
        <div class="flex flex-col md:flex-row gap-6">
          <img
            src="<%= ingredient.image %>"
            alt="Ingredient Image"
            class="w-full md:w-64 rounded-xl object-cover"
          />

          <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
              <%= ingredient.nameMM %> |
              <span class="text-gray-500 text-xl">
                <%= ingredient.nameEN %></span
              >
            </h1>
            <div class="badge badge-info text-white text-sm mt-2">
              Category: <%= ingredient.category %>
            </div>
          </div>
        </div>

        <!-- Tabs for Description, Benefits, Side Effects -->
        <div class="mt-10">
          <div role="tablist" class="tabs tabs-bordered">
            <input
              type="radio"
              name="tab"
              role="tab"
              class="tab"
              aria-label="Description"
              checked
            />
            <div role="tabpanel" class="tab-content p-4">
              <h2 class="text-xl font-semibold mb-2">Description (English)</h2>
              <p class="mb-4 text-gray-700"><%= ingredient.descriptionEN %></p>

              <h2 class="text-xl font-semibold mb-2">Description (Myanmar)</h2>
              <p class="text-gray-700"><%= ingredient.descriptionMM %></p>
            </div>

            <input
              type="radio"
              name="tab"
              role="tab"
              class="tab"
              aria-label="Benefits"
            />
            <div role="tabpanel" class="tab-content p-4">
              <h2 class="text-xl font-semibold mb-2">Benefits (English)</h2>
              <p class="mb-4 text-gray-700"><%= ingredient.benefitEN %></p>

              <h2 class="text-xl font-semibold mb-2">Benefits (Myanmar)</h2>
              <p class="text-gray-700"><%= ingredient.benefitMM %></p>
            </div>

            <input
              type="radio"
              name="tab"
              role="tab"
              class="tab"
              aria-label="Side Effects"
            />
            <div role="tabpanel" class="tab-content p-4">
              <h2 class="text-xl font-semibold mb-2">Side Effects (English)</h2>
              <p class="mb-4 text-gray-700"><%= ingredient.sideEffectEN %></p>

              <h2 class="text-xl font-semibold mb-2">Side Effects (Myanmar)</h2>
              <p class="text-gray-700"><%= ingredient.sideEffectMM %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ./partial/footer %>
  </body>
</html>
